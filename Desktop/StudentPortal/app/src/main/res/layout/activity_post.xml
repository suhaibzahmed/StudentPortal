<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    android:background="@drawable/registerlogin3">


    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout"/>

    <ImageButton
        android:id="@+id/postImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/PostText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/registerlogin3"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/post_image" />

    <EditText
        android:id="@+id/PostText"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="What's happening..?"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:padding="15dp"/>

    <Button
        android:id="@+id/User_Post_button"
        android:layout_width="247dp"
        android:layout_height="60dp"
        android:layout_below="@+id/PostText"
        android:layout_alignBottom="@+id/postImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="0dp"
        android:text="Post"
        android:background="@drawable/button"
        android:textStyle="bold" />


</RelativeLayout>