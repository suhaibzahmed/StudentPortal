<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsActivity">



    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/event_page_toolbar"></include>
    <FrameLayout
        android:id="@+id/event_container1"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_below="@+id/event_page_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/All_User_Event_List"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/add_new_event_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/event_container1"
        android:layout_alignParentEnd="true"
        android:src="@drawable/eveveve"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorblack"
        android:baselineAlignBottom="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>