<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity"
    android:background="@drawable/registerlogin3">

    <include
        android:id="@+id/update_Event_page_toolbar"
        layout="@layout/app_bar_layout"/>

    <ImageButton
        android:id="@+id/EventImage"
        android:layout_width="374dp"
        android:layout_height="264dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/update_Event_page_toolbar"
        android:background="@drawable/registerlogin3"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/eventsss" />

    <EditText
        android:id="@+id/EventText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EventImage"
        android:background="@drawable/inputs"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:hint="Event Description.."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/start_event_date"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EventText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/inputs"
        android:hint="Starts From"
        android:onClick="btn_PickerDate"
        android:padding="20dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/end_event_date"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EventText"
        android:background="@drawable/inputs"
        android:layout_toRightOf="@id/start_event_date"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:hint="Ends On"
        android:onClick="btn_PickerDate1"/>

    <Button
        android:id="@+id/User_Event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_event_date"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Create Event"
        android:textColor="@color/colorPrimaryDark1"
        android:textStyle="bold"
        android:textSize="18sp"/>


</RelativeLayout>